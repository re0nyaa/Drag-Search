{
    "manifest_version": 3,
    "name": "Drag Search",
    "version": "1.0.12",
    "description": "드래그한 텍스트를 검색할 수 있는 확장 프로그램",
    "permissions": ["activeTab", "storage", "tabs"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Drag Search"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
